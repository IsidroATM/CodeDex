<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#1F2B3A">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Contenido de la izquierda -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Nombre del algoritmo -->
            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bubble Sort"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#4EE4A7"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium" />

            <!-- Chips de categoría -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/tvComplejidad"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complejidad: O(n)"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:background="@drawable/chip_bg"
                    android:textColor="#FFFFFF"
                    android:fontFamily="sans-serif"
                    android:layout_marginEnd="8dp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Ícono del algoritmo -->
        <ImageView
            android:id="@+id/iconoAlgoritmo"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/circle_background"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_algoritmo"
            android:contentDescription="Ícono del algoritmo"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
