<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1e2b33">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Título del algoritmo -->
        <TextView
            android:id="@+id/tv_titulo_algoritmo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Título del algoritmo"
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="#4EE4A7"
            android:layout_marginTop="48dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="sans-serif-medium" />

        <!-- Lenguaje de programación -->
        <TextView
            android:id="@+id/tv_lenguaje_algoritmo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lenguaje: Python"
            android:textSize="15sp"
            android:textColor="#B0BEC5"
            android:layout_marginBottom="20dp"
            android:fontFamily="sans-serif" />

        <!-- Vista de código -->
        <com.amrdeveloper.codeview.CodeView
            android:id="@+id/code_view_ver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="320dp"
            android:background="#263238"
            android:textColor="#ECEFF1"
            android:textSize="15sp"
            android:padding="20dp"
            android:fontFamily="monospace"
            android:gravity="top|start"
            android:scrollbars="vertical"
            android:editable="false"
            android:elevation="6dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="40dp"
            android:outlineProvider="bounds"
            android:clipToOutline="true" />
    </LinearLayout>
</ScrollView>
