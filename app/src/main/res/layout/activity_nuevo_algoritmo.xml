<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#1e2b33"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Etiqueta: nombre del algoritmo -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del algoritmo:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#4EE4A7"
        android:layout_marginBottom="6dp"/>

    <!-- Campo nombre -->
    <EditText
        android:id="@+id/et_titulo_algoritmo"
        android:hint="Ej. Ordenamiento rápido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:background="@drawable/edit_text_dark"
        android:textColor="#FFFFFF"
        android:textColorHint="#B0BEC5"
        android:fontFamily="sans-serif-medium"
        android:layout_marginBottom="20dp"
        android:elevation="2dp" />

    <!-- Etiqueta código -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Escribe tu algoritmo:"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#4EE4A7"
        android:layout_marginBottom="6dp"/>

    <!-- Editor de código -->
    <com.amrdeveloper.codeview.CodeView
        android:id="@+id/code_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="#263238"
        android:textColor="#C3E88D"
        android:textSize="15sp"
        android:padding="16dp"
        android:fontFamily="monospace"
        android:scrollbars="vertical"
        android:layout_marginBottom="20dp"
        android:elevation="4dp"
        android:outlineProvider="bounds"
        android:clipToOutline="true"/>

    <!-- Etiqueta lenguaje -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lenguaje de programación:"
        android:textSize="14sp"
        android:textColor="#B0BEC5"
        android:layout_marginBottom="4dp"/>

    <!-- Selector de lenguaje -->
    <Spinner
        android:id="@+id/spinner_lenguaje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/spinner_dark"
        android:popupBackground="#37474F"
        android:layout_marginBottom="24dp"
        android:paddingStart="12dp"
        android:paddingEnd="12dp" />

    <!-- Botón guardar -->
    <Button
        android:id="@+id/btn_guardar_algoritmo"
        android:text="Guardar algoritmo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#1E1E1E"
        android:backgroundTint="#FFB74D"
        android:textStyle="bold"
        android:padding="14dp"
        android:fontFamily="sans-serif-medium"
        android:elevation="3dp"/>
</LinearLayout>
