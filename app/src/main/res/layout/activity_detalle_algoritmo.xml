<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollDetalleAlgoritmo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/background_dark">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:divider="?android:attr/dividerHorizontal"
        android:showDividers="middle">

        <!-- Cabecera -->
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@drawable/card_code_style"
            android:layout_marginBottom="24dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:textColor="@color/colorAccent"/>

            <TextView
                android:id="@+id/tvComplejidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/gray_light"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Sección Descripción -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/code_block_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="monospace"
            android:layout_marginBottom="24dp"/>

        <!-- Sección Usos -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usos"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/tvProyectos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/code_block_background"
            android:padding="12dp"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="monospace"
            android:layout_marginBottom="24dp"/>

        <!-- Sección Sintaxis -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sintaxis"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:id="@+id/contenedorSintaxisDinamico"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"/>

        <!-- Botón -->
        <Button
            android:id="@+id/btnAgregarALista"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agregar a lista"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/colorAccent"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-medium"/>
    </LinearLayout>
</ScrollView>
