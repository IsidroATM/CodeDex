<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".fragments.HomeFragment">

    <!-- Título de la app -->
<TextView
android:id="@+id/textAppTitle"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="CodeDex"
android:textSize="32sp"
android:textStyle="bold"
android:textColor="#FFFFFF"
android:layout_marginTop="50dp"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Descripción breve sobre la app -->
<TextView
android:id="@+id/textDescription"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="CodeDex es tu aplicación para explorar lenguajes de programación y aprender sobre sus características."
android:textSize="16sp"
android:textColor="#CCCCCC"
android:gravity="center"
android:layout_marginTop="16dp"
android:layout_marginStart="16dp"
android:layout_marginEnd="16dp"
app:layout_constraintTop_toBottomOf="@id/textAppTitle"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Contenedor para mostrar qué hace la app -->
<LinearLayout
android:id="@+id/containerWhatItDoes"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:padding="20dp"
android:background="@drawable/card_background"
android:elevation="8dp"
android:layout_marginTop="30dp"
app:layout_constraintTop_toBottomOf="@id/textDescription"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

    <ImageView
        android:id="@+id/ic_idea"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_explore" />


<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Qué hace CodeDex?"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explora lenguajes de programación, descubre detalles, y aprende sobre su uso en proyectos reales."
        android:textColor="#CCCCCC"/>
</LinearLayout>
</LinearLayout>

    <!-- Contenedor para mostrar la utilidad de la app -->
<LinearLayout
android:id="@+id/containerWhatItIsFor"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:padding="20dp"
android:background="@drawable/card_background"
android:elevation="8dp"
android:layout_marginTop="20dp"
app:layout_constraintTop_toBottomOf="@id/containerWhatItDoes"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

    <ImageView
        android:id="@+id/ic_idea"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_idea" />


<LinearLayout
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Para qué sirve?"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ideal para desarrolladores curiosos que quieran aprender sobre nuevos lenguajes y herramientas modernas."
        android:textColor="#CCCCCC"/>
</LinearLayout>
</LinearLayout>

    <!-- Botones de navegación -->
<LinearLayout
android:id="@+id/buttonContainer"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:gravity="center"
android:layout_marginTop="30dp"
android:layout_marginBottom="30dp"
app:layout_constraintTop_toBottomOf="@id/containerWhatItIsFor"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent">

<Button
    android:id="@+id/btnAlgoritmos"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Ver Algoritmos"
    android:backgroundTint="@color/colorAccent"
    android:textColor="#FFFFFF"
    android:textStyle="bold"
    android:layout_marginEnd="16dp"/>

<Button
    android:id="@+id/btnLenguajes"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Ver Lenguajes"
    android:backgroundTint="@color/colorPrimary"
    android:textColor="#FFFFFF"
    android:textStyle="bold"/>
</LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
